<div class="text-center">
	<%= image_tag user_avatar(@user) %>
  <h1><%= @user.name %></h1>

  <% if @user == current_user %>
	  <p class="buffer-top"><%= link_to t(".edit_profile"), edit_user_path(@user), class: 'btn btn-primary' %></p>
	<% end %>
</div>
<div class="row">
  <div class="col-md-12">
    <% if @user.events.any? %>
      <h3><%= t(".organized") %></h3>
      <div class="row">
        <%= render partial: 'events/event', collection: @user.events %>
      </div>
    <% else %>
      <p class="buffer-top"><%= t(".user_has_no_events") %></p>
    <% end %>
  </div>
</div>
