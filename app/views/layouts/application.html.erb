<!DOCTYPE html>
<html>
  <head>
    <title>BbqA</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

<div class="row">
  <div class="col"></div>
  <div class="col-lg-10">
  <div class="collapse" id="navbarToggleExternalContent">
    <div class="bg-dark p-4">
      <h5 class="text-white h4">Collapsed content</h5>
      <span class="text-muted">Toggleable via the navbar brand.</span>
    </div>
  </div>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to "BBQ!", root_path, class: 'navbar-brand' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
           <% if user_signed_in? %>
            <li><%= link_to t(".profile"), current_user, class: "nav-link" %></li>
            <li><%= link_to t(".sign_out"), destroy_user_session_path,
                    method: :delete, class: "nav-link"  %></li>
          <% else %>
            <li><%= link_to t(".sign_in"), new_user_session_path, class: "nav-link"  %></li>
            <li><%= link_to t(".registration"),
                    new_user_registration_path, class: "nav-link"  %></li>
          <% end %>
        </ul>
        
      </div>
    </nav></div>
    <div class="col"></div>

    </div>


    <div class="container">
      <div class="row">
        <div class="col-lg-9">
          <%# bootstrap_flash %>
          <% flash.each do |type, msg| %>
            <div class="alert alert-info">
              <%= msg %>
            </div>
          <% end %>

          <%= yield %>
        </div>
        <div class="col-lg-3">

        </div><!--/span-->
      </div><!--/row-->

      <footer>
        <p>&copy; <%= t 'app.company' %> 2020</p>
      </footer>

    </div> <!-- /container -->
  </body>
</html>
